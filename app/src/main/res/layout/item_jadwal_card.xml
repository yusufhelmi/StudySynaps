<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- COLOR STRIP START -->
        <View
            android:id="@+id/view_color_strip"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="#2563EB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- TIME -->
        <TextView
            android:id="@+id/tv_jam_mulai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="07:00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            app:layout_constraintStart_toEndOf="@id/view_color_strip"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_jam_selesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 08:40"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_jam_mulai"
            app:layout_constraintBottom_toBottomOf="@id/tv_jam_mulai"
            app:layout_constraintTop_toTopOf="@id/tv_jam_mulai"/>

        <!-- SUBJECT NAME -->
        <TextView
            android:id="@+id/tv_matkul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="STRUKTUR DATA"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111827"
            app:layout_constraintStart_toEndOf="@id/view_color_strip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_jam_mulai"/>

        <!-- DETAILS ROW -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_matkul"
            app:layout_constraintStart_toEndOf="@id/view_color_strip"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- TYPE BADGE -->
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teori"
                android:textSize="12sp"
                android:textColor="#2563EB"
                android:background="@drawable/bg_badge_blue_soft"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginEnd="8dp"/>

            <!-- ROOM -->
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_location_on" 
                android:layout_gravity="center_vertical"
                app:tint="#6B7280"/>
            
            <TextView
                android:id="@+id/tv_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lab Komputer"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>